{
  "manifest_version": 3,
  "name": "CyberTemp - Premium Temp Mail",
  "version": "0.9.3",
  "description": "Secure, fast, and anonymous temporary email service with autofill capabilities.",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "alarms"
  ],
  "host_permissions": [
    "*://api.cybertemp.xyz/*",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "service-worker.js"
    ]
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "CyberTemp"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "cybertemp@extension",
      "strict_min_version": "109.0"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icons/*",
        "content.css"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
